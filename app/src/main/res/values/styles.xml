<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppDefault" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/mainBackground</item>
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
        <item name="actionModeStyle">@style/LStyled.ActionMode</item>
        <item name="android:navigationBarColor">@color/mainBackground</item>
        <item name="android:dialogTheme">@style/Theme.AppCompat.Dialog.MydialogTheme</item>
    </style>

    <style name="Theme.AppCompat.Dialog.MydialogTheme">
        <item name="android:background">@color/mainBackground</item>
        <item name="android:buttonStyle">@style/Base.Widget.AppCompat.Button.MyButton</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.MyButton">
        <item name="android:color">@color/colorAccent</item>
    </style>


    <style name="LStyled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Drawer">
        <item name="android:textSize">20sp</item>
    </style>
    
</resources>

