<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_dlg_about"
        android:id="@+id/tv_dlg_about"
        android:textSize="20sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_ok_dlg_about"
        android:id="@+id/btn_ok_dlg_about"
        android:layout_below="@+id/tv_dlg_about"
        android:layout_alignRight="@+id/tv_dlg_about"
        android:layout_alignEnd="@+id/tv_dlg_about"
        android:paddingTop="6dp"
        style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>